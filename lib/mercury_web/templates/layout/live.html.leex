  </div>
  <div class="mt1 mr2 fw7">
    <%= @account.name %>
  </div>
  <div class="mt1">
    <%= link "ðŸ‘‹", to: Routes.page_path(@socket, :delete), title: "log out", class: xc("link") <> " underline" %>
